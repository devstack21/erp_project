{
  "compilerOptions": {
    
    "target": "es2016", 
    "moduleResolution": "node",                                 
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "outDir": "build",                                  

    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "esModuleInterop": true,                                
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*.ts"],                     
  "exclude": ["node_modules"]
}
